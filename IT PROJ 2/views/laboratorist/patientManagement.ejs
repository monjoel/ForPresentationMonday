    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="../dist/img/sample prof pic.jpg" class="user-image" alt="User Image">
              <span class="hidden-xs"><%= username[0].name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <img src="../dist/img/sample prof pic.jpg" class="img-circle" alt="User Image">
                <p>
                  <%= username[0].name %> - <%= username[0].account_type.charAt(0).toUpperCase() + username[0].account_type.slice(1);%>
                </p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <a href="profileManagement" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                  <a href="../logout" class="btn btn-default btn-flat">Sign out</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar">
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left image">
          <img src="../dist/img/sample prof pic.jpg" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
          <p><%= username[0].name %></p>

        </div>
      </div>

    <ul class="sidebar-menu">
        <li><a href="dashboard"><img src="../icons/medicine.png" alt="dboard" height="20px;" width="20px;"> <span>Dashboard</span></a></li>
        <li><a href="labRequestManagement"><img src="../icons/examination.png" alt="dboard" height="20px;" width="20px;"> <span>Diagnosis Request Management</span></a></li>
        <li class="active"><a href="patientManagement" target="_self"><img src="../icons/patient.png" alt="patient" height="20px;" width="20px;"> <span>Patient Management</span></a></li>
        <li><a href="profileManagement"><img src="../icons/doctor.png" alt="dboard" height="20px;" width="20px;"> <span>Profile Management</span></a></li>
      </ul>
    </section>
  </aside>
      <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper"  id="myDiv1"> <!------------------------------------ EDIT FOR LOADER ---------------------------------->
    <section class="content-header">
      <h1>
        Patient Management
        <small>List of Registered Patients</small>
      </h1>
    </section>
        <!-- Main content -->
    <section class="content animate-bottom"> <!------------------------------------ EDIT FOR LOADER ---------------------------------->

       <div class="row">
        <div class="col-xs-12">

          <div class="box" style="border-top-color: #3e0901 !important;">
            <div class="box-header">
          </div>
          <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Patient Type</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Blood Type</th>
                  </tr>
                </thead>

                <%
                for(var i=0; i <p.length; i++){
                    var b = new Date(p[i].birth_date);
                %>
                <tr>
                  <td><%= p[i].patient_type %></td>
                  <td><%= p[i].name %></td>
                  <td><%= p[i].age %></td>
                  <td><%= p[i].sex %></td>
                  <td><%= p[i].blood_type %></td>
                </tr>
                <%}%>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
